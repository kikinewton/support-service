@model SupportService.Entities.Ticket

@{
    ViewData["Title"] = "Create Ticket";
}



<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class=" form-group">
                <input type="hidden" asp-for="IssuingCustomer" asp-items="@(new SelectList(ViewBag.IssuingCustomer, "IssuingCustomerId", "IssuingCustomerId"))" />
            </div>*@
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(ViewBag.Product,"Id", "Name" ))">
                    <option value="">Select Product</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" asp-action="Create" asp-controller="Ticket" />
            </div>
        </form>
    </div>
</div>

